{
  "name": "ai-focus-lens",
  "version": "1.0.0",
  "description": "AI-powered browser extension for detecting WCAG 2.4.7 Focus Visible compliance using LLM analysis",
  "main": "dist/service-worker.js",
  "scripts": {
    "dev": "webpack --mode development --watch",
    "dev:build": "node scripts/dev-build.js",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack --mode production --config webpack.config.js",
    "build:extension": "node scripts/build-extension.js",
    "clean": "rimraf dist packages",
    "type-check": "tsc --noEmit",
    "type-check:prod": "tsc --noEmit --project tsconfig.prod.json",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "package": "pnpm run build:extension",
    "package:dev": "pnpm run build:dev && web-ext build --source-dir=dist --artifacts-dir=packages --filename=ai-focus-lens-dev.zip --overwrite-dest",
    "validate": "pnpm run type-check:prod && pnpm run lint && pnpm run test",
    "prebuild": "pnpm run validate",
    "prepackage": "pnpm run validate",
    "start": "pnpm run dev:build"
  },
  "keywords": [
    "accessibility",
    "wcag",
    "focus-visible",
    "browser-extension",
    "ai",
    "llm"
  ],
  "author": "AI Focus Lens Team",
  "license": "MIT",
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "copy-webpack-plugin": "^11.0.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.54.0",
    "fast-check": "^3.15.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.2.2",
    "web-ext": "^7.8.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}